<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

<h2>管理者ページ</h2>

<%= link_to 'ユーザー登録', new_admin_user_path %>

<table class="table table-dark">
  <thead class="thead-light">
  <tr>
  <td>ユーザー名</td>
  <td>ユーザーアドレス</td>
  <td>タスク数</td>
  <td>編集</td>
  <td>削除</td>
  </tr>
  </thead>

<% @users.each do |user| %>
  <tr>
  <td><%= user.username %></td>
  <td><%= user.email %></td>
  <td><%= user.tasks.count %></td>
  <td><button type="button" class="btn btn-outline-success"><%= link_to '●',edit_admin_user_path(user.id) %></button></td>
  <td><button type="button" class="btn btn-outline-warning"><%= link_to '●',admin_user_path(user.id), method: :delete %></button></td>
  </tr>
<% end %>
</table>

<%= link_to '戻る', tasks_path %>

