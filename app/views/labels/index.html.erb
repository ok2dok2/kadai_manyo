<body>
<h1>タグ一覧</h1>
<%= form_with model: @label, url: labels_path,method: :post, local: true do |f| %>

  <%= f.text_field :title %>

  <%= f.submit "タグ作成" %>
<% end %>

<table class="table table-striped">
  <tr>
    <th style="width: 10%">タグid</th>
    <th>タグ名</th>
    <th>削除</th>
  </tr>


  <% @labels.each do |label| %>
    <tr>
      <th><%= label.id %></th>
      <th><%= label.title %></th>
      <th><%= link_to '■', label_path(label.id), method: :delete %>
      </tr>
    <% end %>
</table>

<%= link_to '戻る', admin_users_path %>

